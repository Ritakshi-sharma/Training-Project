<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorWhite"
    tools:context=".NANI.Signup_page">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/top_image"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/loginimage"
            android:layout_gravity="center"/>

    </LinearLayout>
    <EditText
        android:id="@+id/name"
        android:elevation="2dp"
        android:background="@drawable/edit_text"
        android:layout_below="@+id/top_image"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Username"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:textSize="15sp"
        android:drawablePadding="30dp"
        android:paddingHorizontal="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/sign_email"
        android:elevation="2dp"
        android:background="@drawable/edit_text"
        android:layout_below="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="abc@gmail.com"
        android:drawableLeft="@drawable/ic_email"
        android:textSize="15sp"
        android:drawablePadding="30dp"
        android:paddingHorizontal="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/mobile_no"
        android:elevation="2dp"
        android:background="@drawable/edit_text"
        android:layout_below="@+id/sign_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter phone no"
        android:inputType="phone"
        android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"
        android:textSize="15sp"
        android:drawablePadding="30dp"
        android:paddingHorizontal="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"/>
    <RelativeLayout
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobile_no"
        android:id="@+id/sign_pswd">

        <EditText android:id="@+id/id_search_EditText"
            android:background="@drawable/edit_text"
            android:drawableLeft="@drawable/ic_lock"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:paddingRight="40dp"
            android:hint="Enter Password"
            android:paddingLeft="15dp"
            android:textSize="15sp"
            android:drawablePadding="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"/>

        <ImageButton
            android:id="@+id/id_search_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/id_search_EditText"
            android:layout_alignRight="@+id/id_search_EditText"
            android:layout_alignBottom="@+id/id_search_EditText"
            android:layout_marginTop="3dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/ic_hide"
            android:background="@color/ColorWhite"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_pswd"
        android:id="@+id/confirm_pswd">

        <EditText
            android:id="@+id/id_confirm"
            android:background="@drawable/edit_text"
            android:drawableLeft="@drawable/ic_lock"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:paddingRight="40dp"
            android:hint="Confirm Password"
            android:paddingLeft="15dp"
            android:textSize="15sp"
            android:drawablePadding="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"/>

        <ImageButton
            android:id="@+id/id_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/id_confirm"
            android:layout_alignRight="@+id/id_confirm"
            android:layout_alignBottom="@+id/id_confirm"
            android:layout_marginTop="3dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/ic_hide"
            android:background="@color/ColorWhite"/>

    </RelativeLayout>

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:background="@drawable/button_clicked"
        android:textColor="@color/ColorWhite"
        android:layout_below="@+id/confirm_pswd"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/signup_btn"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text"

            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Users?"

            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:text="Sign In"
            android:textColor="#F55521" />
    </LinearLayout>
</RelativeLayout>
</ScrollView>
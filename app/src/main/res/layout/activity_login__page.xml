<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorWhite"
    tools:context=".NANI.Login_Page">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/top_image"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/loginimage"
            android:layout_gravity="center"/>

    </LinearLayout>
    <EditText
        android:id="@+id/email"
        android:elevation="2dp"
        android:background="@drawable/edit_text"
        android:layout_below="@+id/top_image"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="abc@gmail.com"
        android:drawableLeft="@drawable/ic_email"
        android:textSize="15sp"
        android:drawablePadding="30dp"
        android:paddingHorizontal="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"/>

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:id="@+id/password"

        >

        <EditText android:id="@+id/id_search_EditText"
            android:background="@drawable/edit_text"
            android:drawableLeft="@drawable/ic_lock"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:singleLine="true"
            android:paddingRight="40dp"
            android:hint="*******"
            android:paddingLeft="15dp"
            android:textSize="15sp"
            android:drawablePadding="30dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"/>

        <ImageButton
            android:id="@+id/id_search_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/id_search_EditText"
            android:layout_alignRight="@+id/id_search_EditText"
            android:layout_alignBottom="@+id/id_search_EditText"
            android:layout_marginTop="3dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/ic_hide"
            android:background="@color/ColorWhite"/>

    </RelativeLayout>




    <TextView
        android:id="@+id/forgot_pswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:text="Forgot Password?" />
<Button
    android:id="@+id/login_btn"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:text="LOGIN"
    android:textSize="20sp"
    android:textColor="@color/ColorWhite"
    android:layout_below="@+id/forgot_pswd"
    android:layout_marginHorizontal="50dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/button_clicked"/>
    <TextView
        android:id="@+id/text_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn"
        android:text="OR"
        android:textColor="@color/colorTransparentWhite"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"/>
<LinearLayout
    android:id="@+id/logos"
    android:layout_marginTop="20dp"
    android:layout_centerInParent="true"
    android:layout_below="@+id/text_or"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<ImageView

    android:layout_marginRight="20dp"
    android:background="@drawable/circle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_facebook"
    />
    <ImageView
        android:layout_marginRight="20dp"
        android:background="@drawable/circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_google_plus"
        />
    <ImageView
        android:background="@drawable/circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_instagram"
        />



</LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/logos"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
<TextView
    android:id="@+id/text"

    android:layout_marginTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Don't have account?"

    android:layout_centerInParent="true"
    />

        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:text="Sign Up"
            android:textColor="#F55521" />
    </LinearLayout>
</RelativeLayout>
    </ScrollView>
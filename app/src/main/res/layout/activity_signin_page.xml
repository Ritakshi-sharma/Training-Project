<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorWhite"
    tools:context=".NANI.Signin_page">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/top_image"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/loginimage"
            android:layout_gravity="center"/>

    </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/top_image"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bank_text"
        android:text="Bank Name"
        android:layout_below="@+id/top_image"
        android:layout_marginHorizontal="25dp"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/enter_bank"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="10sp"
        android:hint="Enter Bank Name"
        android:textColor="#A3A2A2"
        android:paddingHorizontal="10dp"
        android:layout_below="@+id/bank_text"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edittext"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/acc_no"
        android:layout_marginTop="10dp"
        android:text="Account Number"
        android:layout_below="@+id/enter_bank"
        android:layout_marginHorizontal="25dp"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/enter_accno"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="number"
        android:hint="Enter Account Number"
        android:textSize="10sp"
        android:textColor="#A3A2A2"
        android:paddingHorizontal="10dp"
        android:layout_below="@+id/acc_no"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edittext"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/acc_name"
        android:layout_marginTop="10dp"
        android:text="Account Holder Name"
        android:layout_below="@+id/enter_accno"
        android:layout_marginHorizontal="25dp"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/enter_accname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter Account Holder Name"
        android:textColor="#A3A2A2"
        android:paddingHorizontal="10dp"
        android:layout_below="@+id/acc_name"
        android:textSize="10sp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edittext"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/branch_name"
        android:layout_marginTop="10dp"
        android:text="Branch Name"
        android:layout_below="@+id/enter_accname"
        android:layout_marginHorizontal="25dp"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/enter_branch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter Branch Name"
        android:textSize="10sp"
        android:textColor="#A3A2A2"
        android:paddingHorizontal="10dp"
        android:layout_below="@+id/branch_name"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edittext"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/branch_code"
        android:layout_marginTop="10dp"
        android:text="Branch Code"
        android:layout_below="@+id/enter_branch"
        android:layout_marginHorizontal="25dp"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/enter_branchcode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter Branch Code"
        android:textColor="#A3A2A2"
        android:paddingHorizontal="10dp"
        android:layout_below="@+id/branch_code"
        android:textSize="10sp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edittext"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone_no"
        android:layout_marginTop="10dp"
        android:text="Phone No(Optional)"
        android:layout_below="@+id/enter_branchcode"
        android:layout_marginHorizontal="25dp"/>
    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/enter_phoneno"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter Phone no"
        android:inputType="phone"
        android:textColor="#A3A2A2"
        android:paddingHorizontal="10dp"
        android:layout_below="@+id/phone_no"
        android:textSize="10sp"
        android:layout_marginHorizontal="20dp"

        android:background="@drawable/edittext"/>
            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NEXT"
                android:background="@drawable/button_clicked"
                android:textColor="@color/ColorWhite"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="40dp"/>
        </LinearLayout>

</RelativeLayout>
</ScrollView>
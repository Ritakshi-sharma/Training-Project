<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/backgound"
    android:elevation="20dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Food_image"
            android:layout_width="95dp"
            android:layout_height="match_parent"

            android:src="@drawable/pizza" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="53dp">

                <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_user" />

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:text="Ciptasmara"

                        android:textColor="#000" />

                    <TextView
                            android:drawableLeft="@drawable/ic_location_on_black_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="At Starbucks"
                            android:textColor="#CFCBCB" />



                </LinearLayout>

                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">


                    <RatingBar

                        android:id="@+id/person_rating"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:numStars="5"
                        android:rating="4"
                        android:stepSize="1" />

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Collection/Delivery:Today"
                android:textColor="#000"
                android:layout_marginRight="5dp"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizza"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/order_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="Confirm"
                    android:textColor="#0F5B9B"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:layout_marginRight="10dp"
                    android:textColor="#EE110D"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageView
    android:id="@+id/show"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_arrow_drop_down_black_24dp"
    android:layout_marginTop="15dp"/>
    <ImageView
        android:id="@+id/hide_button"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_drop_up_black_24dp"
        android:layout_marginTop="15dp"/>
    </RelativeLayout>
<LinearLayout
    android:id="@+id/buttons"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/with_nani"
            android:textSize="10sp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Confirming order with Nani"/>

        <Button
            android:id="@+id/courier"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/with_nani"
            android:layout_centerInParent="true"
            android:text="Courier is on the way"
            android:textSize="10sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:textSize="10sp"
            android:id="@+id/prepared"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Food is being prepared"/>
        <Button
            android:id="@+id/eat"
            android:textSize="10sp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Food is arriving.Time to Eat!"
            android:layout_below="@+id/prepared"/>
    </RelativeLayout>


</LinearLayout>

</LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
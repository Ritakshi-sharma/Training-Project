<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".NANI.AddItem"
    android:background="@drawable/main_background">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
       android:background="@drawable/add_image"
    android:layout_marginTop="10dp"
    android:layout_gravity="center_horizontal"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:background="#E0DFDF"
        android:layout_width="200dp"
        android:layout_height="150dp"
        />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_circle_outline_black_24dp"
            android:layout_centerInParent="true"/>

</RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/recycler_view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:background="@drawable/add_item"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#AFADAD" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/add"
            android:hint="Enter item name"
            android:textSize="15sp" />


    </LinearLayout>



    <LinearLayout
        android:background="@drawable/add_item"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#AFADAD"/>
        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/add"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter description of item"/>


    </LinearLayout>
    <LinearLayout
        android:background="@drawable/add_item"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Availability of Item"
            android:textColor="#AFADAD"/>
        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/add"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select"/>


    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Max. Quantity of Items available"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/decrease"
                android:layout_marginRight="10dp"
                android:background="@drawable/increament"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"/>
            <Button
                android:id="@+id/increase"
                android:layout_marginLeft="10dp"
                android:background="@drawable/increament"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="20sp"/>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:background="@drawable/add_item"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity/Units of measurement per Item"
            android:textColor="#AFADAD"/>
        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/add"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dozen/Kilos/Grams etc"/>


    </LinearLayout>
    <LinearLayout
        android:background="@drawable/add_item"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price per item"
            android:textColor="#AFADAD"/>
        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/add"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="price"/>


    </LinearLayout>
    <LinearLayout
        android:background="@drawable/add_item"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List of Ingredients"
            android:textColor="#AFADAD"/>
        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/add"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="List"/>


    </LinearLayout>
    <RelativeLayout
        android:padding="10dp"
        android:elevation="20dp"
        android:background="@drawable/backgound"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:text=" My Specialities"
            android:textColor="@color/colorTransparentWhite"
            android:textSize="20sp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/text_get"
            tools:listitem="@layout/list_recycler"
            android:layout_width="321dp"
            android:layout_height="50dp"
            android:layout_below="@+id/name"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:scrollbars="horizontal"/>

        <Spinner
            android:spinnerMode="dialog"
            android:id="@+id/spinner"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/text_get"
            android:prompt="@string/specialities_prompt"
            android:layout_marginTop="20dp"/>


    </RelativeLayout>

<CheckBox
    android:textSize="18sp"
    android:textColor="@color/colorTransparentWhite"
    android:id="@+id/checkbox"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Contains Meat Products"/>
    <LinearLayout
        android:background="@drawable/add_item"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preparation instructions"
            android:textColor="#AFADAD"/>
        <EditText
            android:layout_marginTop="10dp"
            android:background="@drawable/add"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Instructions"/>


    </LinearLayout>
    <RelativeLayout
        android:padding="10dp"
        android:elevation="20dp"
        android:background="@drawable/backgound"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/allergies"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="7dp"
            android:text=" Allergies"
            android:textColor="@color/colorTransparentWhite"
            android:textSize="20sp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/allergies_get"
            tools:listitem="@layout/list_recycler"
            android:layout_width="321dp"
            android:layout_height="50dp"
            android:layout_below="@+id/allergies"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:scrollbars="horizontal"/>

        <Spinner
            android:prompt="@string/allergies_prompt"
            android:spinnerMode="dialog"
            android:id="@+id/allergies_list"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/allergies_get"
            android:layout_marginTop="20dp"/>


    </RelativeLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorWhite"
        android:text="POST"
        android:background="@drawable/button_clicked"
        android:layout_marginHorizontal="45dp"
        android:layout_marginVertical="20dp"/>
</LinearLayout>
</ScrollView>